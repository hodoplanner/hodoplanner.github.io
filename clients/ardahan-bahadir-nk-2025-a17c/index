<script>
  // === Config rapide ===
  const PASSWORD = "bahadir-4257";              // <-- change le mot de passe ici
  const PAYMENT_URL = "PAYMENT_LINK_HERE";      // <-- remplace par ton Payment Link Stripe

  // Year
  document.getElementById('y').textContent = new Date().getFullYear();

  // Appliquer URL de paiement aux 2 boutons
  document.getElementById('payBtn').href = PAYMENT_URL;
  document.getElementById('payBtn2').href = PAYMENT_URL;

  // Impression
  document.getElementById('btnPrint').addEventListener('click', (e)=>{
    e.preventDefault(); window.print();
  });

  // Gate (protection légère)
  const gate = document.getElementById('gate');
  const pwd  = document.getElementById('pwd');
  const err  = document.getElementById('err');
  const unlock = document.getElementById('unlock');

  // si déjà débloqué pour cette session
  if (sessionStorage.getItem(location.pathname + ":ok") === "1") {
    gate.style.display = 'none';
  }

  unlock.addEventListener('click', tryOpen);
  pwd.addEventListener('keydown', (e)=>{ if(e.key==='Enter') tryOpen(); });

  function tryOpen(){
    if (pwd.value.trim() === PASSWORD){
      gate.style.display = 'none';
      sessionStorage.setItem(location.pathname + ":ok", "1");
    } else {
      err.style.display = 'inline-block';
      gate.querySelector('.panel').animate([{transform:'translateX(0)'},{transform:'translateX(-4px)'},{transform:'translateX(4px)'},{transform:'translateX(0)'}], {duration:180});
    }
  }
</script>
