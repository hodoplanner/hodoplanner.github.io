<script>
  // Année
  document.getElementById('y').textContent = new Date().getFullYear();

  // Copier lien
  const btnShare = document.getElementById('btnShare');
  btnShare.addEventListener('click', async () => {
    try{
      await navigator.clipboard.writeText(location.href);
      btnShare.textContent = "Lien copié ✅";
      setTimeout(()=> btnShare.innerHTML = '<i class="fa-solid fa-link"></i> Copier le lien', 1800);
    }catch(e){
      alert("Impossible de copier. Copie manuelle : " + location.href);
    }
  });

  // Simu message
  document.getElementById('sendMsg').addEventListener('click', ()=>{
    const v = (document.getElementById('msgBox').value||"").trim();
    if(!v) { alert("Écris un petit message avant d’envoyer 🙂"); return; }
    alert("Message envoyé (simulation). Dans la version finale, cela partira sur ton email.");
    document.getElementById('msgBox').value = "";
  });
</script>
